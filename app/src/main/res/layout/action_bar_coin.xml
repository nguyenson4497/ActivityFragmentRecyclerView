<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="6dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:rotation="-90"
        android:src="@drawable/icon_return"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_text_1" />

    <TextView
        android:id="@+id/tv_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_black"
        android:text="neo index"
        android:textAllCaps="true"
        android:textColor="#1d1d1d"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/tv_text_2"
        app:layout_constraintLeft_toRightOf="@id/iv_return"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/raleway_medium"
        android:text="USD"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_text_1"
        app:layout_constraintTop_toBottomOf="@id/tv_text_1" />

    <TextView
        android:id="@+id/tv_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Binance"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_2"
        app:layout_constraintLeft_toRightOf="@id/tv_text_2"
        app:layout_constraintTop_toTopOf="@id/tv_text_2" />

    <ImageView
        android:id="@+id/iv_menu_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_menu_vertical"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_1"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_background_alarm"
        android:padding="9dp"
        android:src="@drawable/icons_8_alarm"
        app:layout_constraintRight_toLeftOf="@+id/iv_menu_vertical"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>